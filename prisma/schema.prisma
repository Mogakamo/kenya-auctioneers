// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model Example {
    id String @id @default(cuid())
}

model User {
    id        String   @id @default(cuid())
    name      String
    email     String   @unique
    password  String
    img       String
    verified  String   @default("false")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    provider  String
    role      Role     @default(bidder)

    bids Bid[]

    @@map("users")
}

enum Role {
    admin
    bidder
    seller
    superadmin
}

model Bid {
    id          String @id @default(cuid())
    name        String
    description String
    price       Int
    category    String
    brand       String
    img         String
    bidStatus   String @default("pending")
    bidStart    DateTime
    bidEnd      DateTime

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    BidOwner   User   @relation(fields: [BidOwnerId], references: [id])
    BidOwnerId String

    @@map("bids")
}
